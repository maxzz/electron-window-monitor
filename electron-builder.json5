{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "YourAppID",
  "asar": true,
  "asarUnpack": "**\\*.{node,dll}",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    //ok
    // {
    //     "from": "./src/electron/app/plugins/bin",
    //     "to": "./dist-electron/plugins",
    //     "filter": ["**/*"]
    // }
    //no
    // {
    //     "from": "./src/electron/app/plugins/bin",
    //     "to": ".",
    //     //"filter": ["**/*", "!*.dll"]
    // }
    // {
    //     "from": "./src/electron/app/plugins/bin/dpnodehelper.dll",
    //     "to": "./dpnodehelper.dll",
    //     "filter": ["**/*", "!*.dll"]
    // }
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
